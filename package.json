{
  "name": "@nasa-gcn/architect-plugin-search",
  "description": "Architect plugin for OpenSearch / ElasticSearch",
  "version": "1.8.0",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-plugin-search"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Leo Singer",
      "email": "leo.p.singer@nasa.gov"
    }
  ],
  "type": "module",
  "files": [
    "index.js"
  ],
  "scripts": {
    "prepare:husky": "husky",
    "prepare:esbuild": "esbuild __tests__/test.ts index.ts --bundle --packages=external --outdir=. --platform=node --format=esm --tree-shaking=true",
    "prepare": "run-p prepare:*",
    "test": "node --test"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@nasa-gcn/architect-functions-search": "^1.0.0",
    "@nasa-gcn/architect-plugin-utils": "^0.4.0",
    "@opensearch-project/opensearch": "^2.2.0",
    "dockerode": "^4.0.0",
    "env-paths": "^3.0.0",
    "lodash": "^4.17.21",
    "make-fetch-happen": "^14.0.0",
    "rimraf": "^4.1.2",
    "tar": "^7.4.1",
    "tree-kill": "^1.2.2",
    "unzip-stream": "^0.3.1",
    "wait-port": "^1.0.4"
  },
  "devDependencies": {
    "@architect/architect": "^11.2.0",
    "@aws-sdk/client-ssm": "^3.777.0",
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/architect__utils": "^4.0.0",
    "@types/dockerode": "^3.3.23",
    "@types/lodash": "^4.17.16",
    "@types/make-fetch-happen": "^10.0.1",
    "@types/node": "^22.2.0",
    "@types/tar": "^6.1.4",
    "@types/unzip-stream": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.0.1",
    "execa": "^9.3.0",
    "husky": "^9.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
